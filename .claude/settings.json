{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [{ "type": "command", "command": "node .claude/hooks/postToolUse.cjs" }]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [{ "type": "command", "command": "node .claude/hooks/PreEdit.cjs" }]
      }
    ],
    "TaskCompleted": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/quality-gate.cjs",
            "timeout": 120000
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "ralph-loop@claude-plugins-official": false,
    "csharp-lsp@claude-plugins-official": true,
    "github@claude-plugins-official": false,
    "superpowers@claude-plugins-official": false,
    "oh-my-claudecode@omc": false
  }
}

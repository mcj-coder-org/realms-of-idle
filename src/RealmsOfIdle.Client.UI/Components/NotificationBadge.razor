<span class="notification-badge" style="@GetStyle()">
    @ChildContent
    @if (Type == NotificationBadgeType.Dot && ShowBadge)
    {
        <span class="notification-badge-dot"></span>
    }
    @if (Type == NotificationBadgeType.Count && ShowBadge && !string.IsNullOrEmpty(Count))
    {
        <span class="notification-badge-count">@Count</span>
    }
</span>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public NotificationBadgeType Type { get; set; } = NotificationBadgeType.Dot;

    [Parameter]
    public bool ShowBadge { get; set; }

    [Parameter]
    public string? Count { get; set; }

    private string? GetStyle()
    {
        return Type == NotificationBadgeType.Dot ? "position: relative; display: inline-block;" : null;
    }
}

    <div class="component-section">
        <div class="component-header">
            <h2>Resource Icons</h2>
            <span class="component-tag">Sizes</span>
        </div>
        <p class="component-description">
            Display resources with emoji icon and gold-colored amount.
        </p>

        <div class="preview-area">
            <ResourceIcon Emoji="ðŸ’°" Amount="1,250" />

@code {
    private void LogClick(string action)
    {
        Console.WriteLine($"Button clicked: {action}");
    }
}

<style>
    .component-section {
        margin-bottom: 40px;
    }

    .component-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid var(--border-color);
    }

    .component-header h2 {
        font-size: 24px;
        color: var(--accent-green);
    }

    .component-tag {
        font-size: 14px;
        padding: 4px 8px;
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        color: var(--text-dim);
    }

    .component-description {
        font-size: 16px;
        color: var(--text-dim);
        margin-bottom: 20px;
    }

    .variations-container {
        display: grid;
        gap: 20px;
    }

    .variation {
        background: var(--bg-secondary);
        border: 2px solid var(--border-color);
        padding: 16px;
    }

    .variation-header {
        font-size: 18px;
        color: var(--accent-gold);
        margin-bottom: 12px;
        padding-bottom: 8px;
        border-bottom: 1px dashed var(--border-color);
    }

    .preview-area {
        background: var(--bg-primary);
        border: 1px solid var(--border-color);
        padding: 16px;
        min-height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        flex-wrap: wrap;
    }
</style>

@page "/components"
@using RealmsOfIdle.Client.UI.Components

<PageTitle>Components - Realms of Idle</PageTitle>

<div class="container">
    <h1>Component Library</h1>
    <p class="text-dim">CRT-themed UI components</p>

    <div class="component-section">
        <div class="component-header">
            <h2>Buttons</h2>
            <span class="component-tag">Variants & Sizes</span>
        </div>
        <p class="component-description">
            Retro-styled buttons with hover glow effects. Available in Default, Primary, and Danger variants with Small, Standard, and Large sizes.
        </p>

        <div class="variations-container">
            <div class="variation">
                <div class="variation-header">Variants</div>
                <div class="preview-area">
                    <Button OnClick="@(() => LogClick("Default"))">Default</Button>
                    <Button Variant="ButtonVariant.Primary" OnClick="@(() => LogClick("Primary"))">Primary</Button>
                    <Button Variant="ButtonVariant.Danger" OnClick="@(() => LogClick("Danger"))">Danger</Button>
                </div>
            </div>

            <div class="variation">
                <div class="variation-header">Sizes</div>
                <div class="preview-area">
                    <Button Size="ButtonSize.Small" OnClick="@(() => LogClick("Small"))">Small</Button>
                    <Button OnClick="@(() => LogClick("Standard"))">Standard</Button>
                    <Button Size="ButtonSize.Large" OnClick="@(() => LogClick("Large"))">Large</Button>
                </div>
            </div>
        </div>
    </div>

    <div class="component-section">
        <div class="component-header">
            <h2>Retro Panel</h2>
            <span class="component-tag">Container</span>
        </div>
        <p class="component-description">
            Panel with CRT styling, optional header with dashed underline.
        </p>

        <div class="variations-container">
            <div class="variation">
                <div class="variation-header">With Header</div>
                <RetroPanel Header="Panel Title" Style="min-width: 300px;">
                    Panel content with retro border styling and dashed header separator.
                </RetroPanel>
            </div>

            <div class="variation">
                <div class="variation-header">Without Header</div>
                <RetroPanel Style="min-width: 300px;">
                    Simple panel without header section.
                </RetroPanel>
            </div>
        </div>
    </div>

    <div class="component-section">
        <div class="component-header">
            <h2>Progress Bars</h2>
            <span class="component-tag">Variants & Sizes</span>
        </div>
        <p class="component-description">
            Horizontal progress bars with color variants (Default, Secondary, Danger) and size options.
        </p>

        <div class="variations-container">
            <div class="variation">
                <div class="variation-header">Variants</div>
                <div style="display: flex; flex-direction: column; gap: 12px; max-width: 400px;">
                    <ProgressBar Value="75" Label="Default" />
                    <ProgressBar Value="60" Variant="ProgressBarVariant.Secondary" Label="Secondary" />
                    <ProgressBar Value="30" Variant="ProgressBarVariant.Danger" Label="Danger" />
                </div>
            </div>

            <div class="variation">
                <div class="variation-header">Sizes</div>
                <div style="display: flex; flex-direction: column; gap: 12px; max-width: 400px;">
                    <ProgressBar Value="75" Size="ProgressBarSize.Compact" Label="Compact" />
                    <ProgressBar Value="50" Label="Standard" />
                    <ProgressBar Value="90" Size="ProgressBarSize.Large" Label="Large" />
                </div>
            </div>
        </div>
    </div>

    <div class="component-section">
        <div class="component-header">
            <h2>Stat Cards</h2>
            <span class="component-tag">Layouts</span>
        </div>
        <p class="component-description">
            Display stats with icon, label, and value. Horizontal, vertical, and minimal layouts available.
        </p>

        <div class="variations-container">

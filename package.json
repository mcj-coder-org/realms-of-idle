{
  "name": "cozy-fantasy-rpg",
  "version": "0.1.0",
  "description": "Cozy Slice-of-Life Fantasy RPG - Mobile/Web Unity Game",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "test": "dotnet test CozyFantasyRpg.slnx",
    "lint": "npm run lint:format && npm run lint:md && npm run lint:links",
    "lint:format": "prettier --check .",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#.worktrees\"",
    "lint:links": "node scripts/lint-links.mjs --roots docs/design",
    "format": "npm run format:format && npm run format:cs && npm run format:md",
    "danger": "danger ci --dangerfile=danger.js",
    "danger:local": "node scripts/danger-local.mjs",
    "review:local": "node scripts/generate-review-report.mjs",
    "review:metrics": "node scripts/calculate-code-metrics.mjs",
    "review:full": "npm run review:metrics && npm run review:local",
    "review:danger": "npx danger ci --dangerfile=danger.js --dangerfile=danger-extensions.js",
    "format:format": "prettier --write .",
    "format:md": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\" \"#.worktrees\"",
    "format:cs": "dotnet format .--no-restore",
    "branch:setup": "node scripts/setup-branch-protection.mjs setup",
    "branch:setup:shell": "bash scripts/setup-branch-protection.sh setup",
    "branch:verify": "node scripts/setup-branch-protection.mjs verify",
    "branch:verify:shell": "bash scripts/setup-branch-protection.sh verify",
    "branch:cleanup": "node scripts/setup-branch-protection.mjs cleanup",
    "branch:cleanup:shell": "bash scripts/setup-branch-protection.sh cleanup"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@octokit/rest": "^20.0.0",
    "danger": "^13.0.5",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "markdown-link-check": "^3.14.2",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "*.cs": "dotnet format . --no-restore --include",
    "*.md": [
      "prettier --write",
      "markdownlint-cli2 --fix",
      "node scripts/check-doc-structure.mjs"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
